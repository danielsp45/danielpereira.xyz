---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import {Content as Introduction} from "../content/index.md"

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there 👋</div>
      <div class="text-5xl font-bold">I'm Daniel Pereira</div>
      <div class="text-3xl py-3 font-bold">Software Engineering Student</div>
      <div class="py-2">
        <Introduction/>
      </div>
      <div class="mt-8">
        <a class="btn" href="https://www.linkedin.com/in/daniel-pereira45/" target="_blank"> Let's connect!</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">My best projects {"</>"}</div>
    </div>

    <HorizontalCard
      title="Atomic"
      img="/atomic-logo.png"
      desc="⚛️ A web-based application to help the academic community "
      url="https://github.com/cesium/atomic"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
      title="Bokken"
      img="/dojo.png"
      desc="⚔️ Backend platform for managing session registrations and recording ninjas progress "
      url="https://github.com/coderdojobraga/bokken"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
      title="Gongo"
      img="/dojo.png"
      desc="🎉 A bot for helping admins promote members in the CoderDojo Braga Discord server "
      url="https://github.com/coderdojobraga/gongo"
    />
    <div class="divider my-0"></div>
</BaseLayout>
